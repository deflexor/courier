<h1>Редактирование комментария</h1>

<% form_for([@courier_task,@comment]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :author %><br />
    <b><%= @comment.author %></b>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, :cols => 70, :rows => 6 %>
  </p>
  <p>
    <%= f.submit t(:update) %>
  </p>
<% end %>

<%= link_to t(:back), @courier_task %>
